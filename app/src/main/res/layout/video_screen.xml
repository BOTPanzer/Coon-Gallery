<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".screens.home.HomeActivity">

    <com.botpa.turbophotos.gallery.views.ZoomableLayout
        android:id="@+id/playerZoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:resize_mode="fit"
            app:show_timeout="5000"
            app:use_controller="false" />

    </com.botpa.turbophotos.gallery.views.ZoomableLayout>

    <RelativeLayout
        android:id="@+id/overlayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/overlayIndent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="?attr/colorSurface"
                app:layout_constraintBottom_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_gradient"
                        android:backgroundTint="?attr/colorSurface"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/overlayName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/opificio_bold_rounded"
                            android:singleLine="true"
                            android:text="Name"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/overlayPlay"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="#00000000"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ProgressBar
                                    android:id="@+id/overlayLoading"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:id="@+id/overlayPlayIcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:padding="8dp"
                                    app:srcCompat="@drawable/play"
                                    app:tint="?attr/colorOnSurface" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_gradient_reversed"
                        android:backgroundTint="?attr/colorSurface"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/overlayTimeSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:value="0"
                            android:valueFrom="0"
                            android:valueTo="1"
                            app:labelBehavior="gone"
                            app:tickVisible="false" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:id="@+id/overlayTimeCurrent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/victor_mono"
                                android:text="00:00" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/overlayTimeDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/victor_mono"
                                android:text="10:00" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="?attr/colorSurface"
                app:layout_constraintTop_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</RelativeLayout>