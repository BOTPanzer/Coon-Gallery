<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".main.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/displayList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/displayOverlayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/displayOverlayIndent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="?attr/colorSurface"
                app:layout_constraintBottom_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_gradient"
                        android:backgroundTint="?attr/colorSurface"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/displayNameText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/opificio_bold_rounded"
                            android:singleLine="true"
                            android:text="Name"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/displayCloseButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            app:cardBackgroundColor="#00000000"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:padding="8dp"
                                app:srcCompat="@drawable/clear"
                                app:tint="?attr/colorOnSurface" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_gradient_reversed"
                        android:backgroundTint="?attr/colorSurface"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/displayInfoButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="#00000000"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:padding="8dp"
                                app:srcCompat="@drawable/info"
                                app:tint="?attr/colorOnSurface" />

                        </androidx.cardview.widget.CardView>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/displayOptionsButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="#00000000"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:padding="8dp"
                                app:srcCompat="@drawable/more"
                                app:tint="?attr/colorOnSurface" />

                        </androidx.cardview.widget.CardView>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/displayInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="?attr/colorPrimary"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:id="@+id/displayInfoName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opificio_bold_rounded"
                                    android:text="File name"
                                    android:textColor="?attr/colorOnPrimary" />

                                <TextView
                                    android:id="@+id/displayInfoNameText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="~ no name"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textColorHint="?attr/colorOnPrimary" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayInfoCaption"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opificio_bold_rounded"
                                    android:text="Caption"
                                    android:textColor="?attr/colorOnPrimary" />

                                <TextView
                                    android:id="@+id/displayInfoCaptionText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="~ no caption"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textColorHint="?attr/colorOnPrimary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayInfoLabels"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opificio_bold_rounded"
                                    android:text="Labels"
                                    android:textColor="?attr/colorOnPrimary" />

                                <HorizontalScrollView
                                    android:id="@+id/displayInfoLabelsScroll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/displayInfoLabelsText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="~ no labels"
                                            android:textColor="?attr/colorOnPrimary"
                                            android:textColorHint="?attr/colorOnPrimary" />
                                    </LinearLayout>
                                </HorizontalScrollView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/displayInfoText"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/opificio_bold_rounded"
                                        android:text="Text"
                                        android:textColor="?attr/colorOnPrimary" />

                                    <HorizontalScrollView
                                        android:id="@+id/displayInfoTextScroll"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/displayInfoTextText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:hint="~ no text"
                                                android:textColor="?attr/colorOnPrimary"
                                                android:textColorHint="?attr/colorOnPrimary" />
                                        </LinearLayout>
                                    </HorizontalScrollView>
                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/displayInfoEdit"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardBackgroundColor="#00000000"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="?attr/selectableItemBackground"
                                        android:padding="8dp"
                                        app:srcCompat="@drawable/edit"
                                        app:tint="?attr/colorOnPrimary" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="90dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/displayOptionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"
                    android:gravity="bottom|end"
                    android:orientation="vertical"
                    android:paddingVertical="100dp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/colorPrimary"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/displayOptionsRestore"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    app:srcCompat="@drawable/restore"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:paddingTop="5dp"
                                    android:text="Restore"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayOptionsDelete"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    app:srcCompat="@drawable/delete"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:paddingTop="5dp"
                                    android:text="Delete"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayOptionsTrash"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    app:srcCompat="@drawable/delete"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:paddingTop="5dp"
                                    android:text="Move to Trash"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayOptionsShare"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    app:srcCompat="@drawable/share"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:paddingTop="5dp"
                                    android:text="Share"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayOptionsEdit"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    app:srcCompat="@drawable/edit"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:paddingTop="5dp"
                                    android:text="Edit"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/displayOptionsOpen"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    app:srcCompat="@drawable/open"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:paddingTop="5dp"
                                    android:text="Open with"
                                    android:textColor="?attr/colorOnPrimary"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="?attr/colorSurface"
                app:layout_constraintTop_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <LinearLayout
                android:id="@+id/displayEditLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opificio_bold_rounded"
                                android:text="Caption"
                                android:textColor="?attr/colorOnPrimary" />

                            <EditText
                                android:id="@+id/displayEditCaptionText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="?attr/colorOnPrimary"
                                android:hint="Caption"
                                android:textColor="?attr/colorOnPrimary"
                                android:textColorHighlight="?attr/colorSecondary"
                                android:textColorHint="?attr/colorOnPrimary"
                                android:textColorLink="?attr/colorOnPrimary"
                                android:textSize="14sp"
                                android:theme="@style/EditTextStyle" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/opificio_bold_rounded"
                                android:text="Labels"
                                android:textColor="?attr/colorOnPrimary" />

                            <EditText
                                android:id="@+id/displayEditLabelsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="?attr/colorOnPrimary"
                                android:hint="Labels (coma separated)"
                                android:singleLine="true"
                                android:textColor="?attr/colorOnPrimary"
                                android:textColorHighlight="?attr/colorSecondary"
                                android:textColorHint="?attr/colorOnPrimary"
                                android:textColorLink="?attr/colorOnPrimary"
                                android:textSize="14sp"
                                android:theme="@style/EditTextStyle" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/displayEditSave"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/comfortaa_medium"
                                        android:text="Save"
                                        android:textAlignment="center"
                                        android:textColor="?attr/colorOnPrimaryContainer" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </ScrollView>

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/displayEditSpace"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:minHeight="90dp" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>